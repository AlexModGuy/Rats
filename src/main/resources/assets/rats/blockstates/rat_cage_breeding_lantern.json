{
  "multipart": [

    {   "when": { "up": "2" },
      "apply": { "model": "rats:rat_cage_top_tube", "uvlock": false }
    },
    {   "when": { "down": "2" },
      "apply": { "model": "rats:rat_cage_bottom_tube", "uvlock": false }
    },
    {   "when": { "south": "2" },
      "apply": { "model": "rats:rat_cage_bars_tube", "y" : 180, "uvlock": false }
    },
    {   "when": { "east": "2" },
      "apply": { "model": "rats:rat_cage_bars_tube", "y" : 90, "uvlock": false }
    },
    {   "when": { "west": "2" },
      "apply": { "model": "rats:rat_cage_bars_tube", "y" : 270, "uvlock": false }
    },
    {   "when": { "north": "2" },
      "apply": { "model": "rats:rat_cage_bars_tube", "y" : 0, "uvlock": false }
    },

    {   "when": { "up": "0" },
      "apply": { "model": "rats:rat_cage_top", "uvlock": false }
    },
    {   "when": { "down": "0" },
      "apply": { "model": "rats:rat_cage_bottom", "uvlock": false }
    },
    {   "when": { "east": "0" },
      "apply": { "model": "rats:rat_cage_bars", "y" : 90, "uvlock": false }
    },
    {   "when": { "west": "0" },
      "apply": { "model": "rats:rat_cage_bars", "y" : 270, "uvlock": false }
    },
    {   "when": { "north": "0" },
      "apply": { "model": "rats:rat_cage_bars", "y" : 0, "uvlock": false }
    },
    {   "when": { "south": "0" },
      "apply": { "model": "rats:rat_cage_bars", "y" : 180, "uvlock": false }
    },

    {   "when": {
      "AND": [
        {"OR": [{"down": "0"}, {"down": "2"}]},
        {"OR": [{"east": "0"}, {"east": "2"}]}
      ]},
      "apply": { "model": "rats:rat_cage_bottom_right", "y" : 0, "uvlock": false }
    },
    {   "when": {
      "AND": [
      {"OR": [{"down": "0"}, {"down": "2"}]},
      {"OR": [{"west": "0"}, {"west": "2"}]}
    ]},      "apply": { "model": "rats:rat_cage_bottom_left", "y" : 0, "uvlock": false }
    },
    {   "when": {
      "AND": [
        {"OR": [{"down": "0"}, {"down": "2"}]},
      {"OR": [{"north": "0"}, {"north": "2"}]}
    ]},
      "apply": { "model": "rats:rat_cage_bottom_left", "y" : 90, "uvlock": false }
    },
    {  "when": {
      "AND": [
        {"OR": [{"down": "0"}, {"down": "2"}]},
        {"OR": [{"south": "0"}, {"south": "2"}]}
      ]},
      "apply": { "model": "rats:rat_cage_bottom_right", "y" : 90, "uvlock": false }
    }
  ]
}